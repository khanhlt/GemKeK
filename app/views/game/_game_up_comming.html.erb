<div class="col-md-12" style="border: 1px solid #fff; margin-top: 20px; padding-bottom: 20px">
<div class="col-md-12 text-center related-game ">Upcoming Game</div>
<% @game_upcoming.each do |game| %>
    <div class="col-md-12 text-center list-related-game">
          
<%= image_tag(game.photos.first.image_url, :class => "img-responsive fix-box-img-top-game",  :size => "20x10" ) %>
        <br>
          <a><strong> <%=link_to game_detail_path(id: game.id) do %> <%= game.name %><%end%></strong>
          <br>
          <strong><%= game.relase_date.strftime("%F") %></strong>
        </a>
    </div>
<% end %>
</div>